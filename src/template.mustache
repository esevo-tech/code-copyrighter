<!DOCTYPE html>
<html>
  <head>
    <style>
      body {
        font-family: sans-serif;
        max-width: 960px;
        margin: 2em auto;
      }

      section {
        padding: 2em;
      }

      h1, h2 {
        font-weight: 100;
        margin: 0;
      }

      pre {
        border: 1px dashed silver;
        padding: 10px;
      }

      li {
        padding: 0.25em 0;
      }

      .highlighted {
        color: #6200ee;
      }

      .dir {
        opacity: 0.4;
      }

      .variables {
        font-size: 0.75em;
        opacity: 0.7;
      }
    </style>
  </head>
  <body>
    <h1>Report of {{headersCount}} copyright headers in {{filesCount}} file(s)</h1>

    {{#headers}}
      {{#value}}
      <section>
        <h2>Header <span class="highlighted">{{name}}</span>: {{filesCount}} file(s)</h2>
        <pre>{{content}}</pre>

        <details>
          <summary>List of files</summary>
          <ul>
            {{#files}}
              <li>
                <code class="dir">{{dir}}</code><code class="filename">{{name}}</code>
                <div class="variables">
                {{#variables}}
                  {{key}}={{value}}
                {{/variables}}
                </div>
              </li>
            {{/files}}
          </ul>
        </details>
      </section>
      {{/value}}
    {{/headers}}

    <section>
      <h2>{{noHeaderCount}} file(s) with no header detected</h2>

      <details>
        <summary>List of files</summary>
        <ul>
          {{#noHeader}}
            <li>
              <code class="dir">{{dir}}</code><code class="filename">{{name}}</code>
            </li>
          {{/noHeader}}
        </ul>
      </details>
    </section>
  </body>
</html>