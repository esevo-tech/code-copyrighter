<!DOCTYPE html>
<html>
  <head>
    <style>
      body {
        font-family: sans-serif;
      }

      section {
        padding: 2em;
      }

      h1, h2 {
        font-weight: 100;
        margin: 0;
      }

      pre {
        border: 1px dashed silver;
        padding: 10px;
      }
    </style>
  </head>
  <body>
    <h1>Report of file copyright headers ({{headersCount}} distinct ones)</h1>

    {{#headers}}
      <section>
        <h2>{{filesCount}} file(s) with the header CRC {{_key}}</h2>
        <pre>{{content}}</pre>

        <details>
          <summary>List of files</summary>
          <ul>
            {{#files}}
              <li><code>{{.}}</code></li>
            {{/files}}
          </ul>
        </details>
      </section>
    {{/headers}}

    <section>
      <h2>{{noHeaderCount}} file(s) with no header detected</h2>

      <details>
        <summary>List of files</summary>
        <ul>
          {{#noHeader}}
            <li><code>{{.}}</code></li>
          {{/noHeader}}
        </ul>
      </details>
    </section>
  </body>
</html>